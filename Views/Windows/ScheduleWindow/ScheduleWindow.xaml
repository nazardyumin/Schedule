                        <ComboBox x:Name="ComboBoxYearTo" Width="50" Margin="0,0,10,0"
                                  ItemsSource="{Binding AddingSection.YearsTo, Mode=TwoWay}"
                                  SelectedValue="{Binding AddingSection.Data.YearsToSelectedItem.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedIndex="{Binding AddingSection.Data.YearsToSelectedItem.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsEnabled="{Binding AddingSection.States.CanPressTo, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        <ComboBox x:Name="ComboBoxMonthTo" Width="80" Margin="0,0,10,0"
                                  ItemsSource="{Binding AddingSection.MonthsTo, Mode=TwoWay}"
                                  SelectedValue="{Binding AddingSection.Data.MonthsToSelectedItem.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedIndex="{Binding AddingSection.Data.MonthsToSelectedItem.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsEnabled="{Binding AddingSection.States.CanPressTo, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        <ComboBox x:Name="ComboBoxDayTo" Width="40" Margin="0,0,10,0"
                                  ItemsSource="{Binding AddingSection.DatesTo, Mode=TwoWay}"
                                  SelectedValue="{Binding AddingSection.Data.DatesToSelectedItem.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedIndex="{Binding AddingSection.Data.DatesToSelectedItem.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  IsEnabled="{Binding AddingSection.States.CanPressTo, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        <Button x:Name="ButtonTargetDay"
                                Content="{Binding AddingSection.Content.TargetDay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Style="{DynamicResource MaterialDesignFlatSecondaryDarkButton}" Padding="4"
                                Foreground="Gray"
                                IsEnabled="False" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="7" Margin="10,10,10,10">
                    <TextBlock Text="Copy To Every..." />
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="ComboBoxCopy1" Width="85" Margin="0,0,10,0"
                                  ItemsSource="{Binding AddingSection.CopyDays1}"
                                  SelectedValue="{Binding AddingSection.Data.CopyDays1SelectedItem.Value}"
                                  SelectedIndex="{Binding AddingSection.Data.CopyDays1SelectedItem.Index}"
                                  DropDownClosed="ComboBoxCopy1_DropDownClosed"
                                  IsEnabled="{Binding AddingSection.States.CanPressCopy, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        <ComboBox x:Name="ComboBoxCopy2" Width="85" Margin="0,0,10,0"
                                  ItemsSource="{Binding AddingSection.CopyDays2}"
                                  SelectedValue="{Binding AddingSection.Data.CopyDays2SelectedItem.Value}"
                                  SelectedIndex="{Binding AddingSection.Data.CopyDays2SelectedItem.Index}"
                                  Visibility="Hidden"
                                  DropDownClosed="ComboBoxCopy2_DropDownClosed"
                                  IsEnabled="{Binding AddingSection.States.CanPressCopy, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                        <ComboBox x:Name="ComboBoxCopy3" Width="85" Margin="0,0,10,0"
                                  ItemsSource="{Binding AddingSection.CopyDays3}"
                                  SelectedValue="{Binding AddingSection.Data.CopyDays3SelectedItem.Value}"
                                  SelectedIndex="{Binding AddingSection.Data.CopyDays3SelectedItem.Index}"
                                  Visibility="Hidden"
                                  IsEnabled="{Binding AddingSection.States.CanPressCopy, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="8">
                    <StackPanel Margin="10,10,10,10" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ButtonClear" Content="Clear" Margin="0,0,5,0"
                                Style="{DynamicResource MaterialDesignPaperButton}"
                                Command="{Binding AddingSection.CommandClear}"
                                IsEnabled="{Binding AddingSection.States.CanPressClear, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                Click="ButtonClear_Click" />
                        <Button x:Name="ButtonAdd" Content="{Binding AddingSection.Content.AddOrSave}" Margin="5,0,0,0"
                                Style="{DynamicResource MaterialDesignPaperButton}" Click="ButtonAdd_Click"
                                IsEnabled="{Binding AddingSection.States.CanPressAdd, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="\Assets\Icons\github.png" Margin="18,0,0,0" Width="15" Height="15" />
                    <TextBlock Margin="4,0,10,0" VerticalAlignment="Center">
                        <Hyperlink NavigateUri="https://github.com/nazar-photo/Schedule"
                                   RequestNavigate="Hyperlink_RequestNavigate">
                            nazar-photo © 2022
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>


        </Border>
        <Border x:Name="EditingBlock" Visibility="Hidden" Grid.Column="1" BorderBrush="WhiteSmoke" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="7*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Edit Lesson" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Style="{DynamicResource MaterialDesignHeadline6TextBlock}" />
                <StackPanel Grid.Row="1" Margin="10,10,10,10">
                    <TextBlock Text="Subject" />
                    <TextBox x:Name="EditSubject"
                             Text="{Binding AddingSection.Data.Subject.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Row="2" Margin="10,10,10,10">
                    <TextBlock Text="Teacher" />
                    <TextBox x:Name="EditTeacher"
                             Text="{Binding AddingSection.Data.Teacher.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Row="3" Margin="10,10,10,10">
                    <TextBlock Text="Auditorium" />
                    <TextBox x:Name="EditAuditorium"
                             Text="{Binding AddingSection.Data.Auditorium.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <StackPanel Margin="10,10,10,10">
                        <TextBlock Text="Start Time" />
                        <ComboBox x:Name="ComboBoxStartTimeEdit"
                                  ItemsSource="{Binding AddingSection.StartTime}"
                                  SelectedValue="{Binding AddingSection.Data.StartTimeSelectedItem.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedIndex="{Binding AddingSection.Data.StartTimeSelectedItem.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Margin="10,10,10,10">
                        <TextBlock Text=" End Time" />
                        <ComboBox x:Name="ComboBoxEndTimeEdit"
                                  ItemsSource="{Binding AddingSection.EndTime}"
                                  SelectedValue="{Binding AddingSection.Data.EndTimeSelectedItem.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedIndex="{Binding AddingSection.Data.EndTimeSelectedItem.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="5" Margin="10,10,10,10">
                    <TextBlock Text="Change Date" />
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="ComboBoxYearFromEdit" Width="50" Margin="0,0,10,0"
                                  ItemsSource="{Binding AddingSection.YearsFrom}"
                                  SelectedValue="{Binding AddingSection.Data.YearsFromSelectedItem.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedIndex="{Binding AddingSection.Data.YearsFromSelectedItem.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <ComboBox x:Name="ComboBoxMonthFromEdit" Width="80" Margin="0,0,10,0"
                                  ItemsSource="{Binding AddingSection.MonthsFrom, Mode=TwoWay}"
                                  SelectedValue="{Binding AddingSection.Data.MonthsFromSelectedItem.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedIndex="{Binding AddingSection.Data.MonthsFromSelectedItem.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <ComboBox x:Name="ComboBoxDayFromEdit" Width="40" Margin="0,0,10,0"
                                  ItemsSource="{Binding AddingSection.DatesFrom, Mode=TwoWay}"
                                  SelectedValue="{Binding AddingSection.Data.DatesFromSelectedItem.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedIndex="{Binding AddingSection.Data.DatesFromSelectedItem.Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Button x:Name="ButtonTodayEdit"
                                Content="{Binding AddingSection.Content.Today, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Style="{DynamicResource MaterialDesignFlatSecondaryDarkButton}" Padding="4"
                                Foreground="Gray"
                                Command="{Binding AddingSection.CommandToday}"
                                IsEnabled="{Binding AddingSection.States.CanPressToday, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="8">
                    <StackPanel Margin="10,10,10,10" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ButtonClearEdit" Content="Clear" Margin="0,0,5,0"
                                Style="{DynamicResource MaterialDesignPaperButton}"
                                Command="{Binding AddingSection.CommandClear}"
                                IsEnabled="{Binding AddingSection.States.CanPressClear, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                Click="ButtonClear_Click" />
                        <Button x:Name="ButtonSave" Content="{Binding AddingSection.Content.AddOrSave}" Margin="5,0,0,0"
                                Style="{DynamicResource MaterialDesignPaperButton}"
                                Click="ButtonSave_Click"
                                IsEnabled="{Binding AddingSection.States.CanPressSave, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="9">
                    <Button x:Name="ButtonCancel" Content="Cancel" Margin="5,0,0,0"
                            Style="{DynamicResource MaterialDesignPaperButton}"
                            HorizontalAlignment="Center" Click="ButtonCancel_Click"
                            Command="{Binding AddingSection.CommandCancel}" />
                </StackPanel>
                <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="\Assets\Icons\github.png" Margin="18,0,0,0" Width="15" Height="15" />
                    <TextBlock Margin="4,0,10,0" VerticalAlignment="Center">
                        <Hyperlink NavigateUri="https://github.com/nazar-photo/Schedule"
                                   RequestNavigate="Hyperlink_RequestNavigate">
                            nazar-photo © 2022
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>