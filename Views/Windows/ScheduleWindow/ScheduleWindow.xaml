                            Margin="0,0,8,0" Style="{DynamicResource MaterialDesignFlatSecondaryDarkButton}"
                            Foreground="LightGray"
                            IsEnabled="{Binding Model.States.CanPressBack, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Click="ButtonBack_Click" />
                    <TextBlock Text="{Binding Model.Header}" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Style="{DynamicResource MaterialDesignHeadline6TextBlock}" />
                    <Button x:Name="ButtonForward" Content="{Binding ButtonForwardContent}"
                            Margin="8,0,0,0" Style="{DynamicResource MaterialDesignFlatSecondaryDarkButton}"
                            Foreground="LightGray"
                            IsEnabled="{Binding Model.States.CanPressForward,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Click="ButtonForward_Click" />
                    <Button x:Name="ButtonCurrentWeek"
                            Content="Current Week" Margin="30,0,0,0"
                            Style="{DynamicResource MaterialDesignFlatSecondaryDarkButton}"
                            Foreground="Gray"
                            IsEnabled="{Binding Model.States.CanPressCurrentWeek}"
